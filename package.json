{
  "name": "@neo9/n9-node-conf",
  "version": "1.1.1",
  "description": "Conf node module loader",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "nyc": {
    "include": [
      "dist/src/"
    ]
  },
  "scripts": {
    "build": "rimraf dist/ && tsc",
    "lint": "tslint src/*.ts",
    "test": "npm run lint && npm run build && nyc ava --verbose --serial dist/test/ && nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "preversion": "npm test",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neo9/n9-node-conf"
  },
  "author": "Sebastien Chopin <sebastien.chopin@neo9.fr>",
  "dependencies": {
    "app-root-dir": "^1.0.2",
    "debug": "^3.1.0",
    "lodash": "^4.17.5"
  },
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/lodash": "^4.14.107",
    "@types/node": "^8.10.8",
    "ava": "^0.22.0",
    "codecov": "^3.6.5",
    "nyc": "^11.7.0",
    "rimraf": "^2.6.2",
    "std-mocks": "^1.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "keywords": [
    "node conf",
    "conf env",
    "conf",
    "load conf",
    "conf dir"
  ]
}
